{
    "manifest_version": 3,
    "name": "Auto Sign-In",
    "version": "0.0.0.1",
    "description": "An extension to automatically sign in when a specific modal dialog appears on Google websites",
    "icons": {
        "128": "icons/logo2.png"
    },
    "permissions": ["tabs", "scripting", "webNavigation", "activeTab"],

    "host_permissions": [
        "*://*.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "main/page.html"
    }
}
